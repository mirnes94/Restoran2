<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6"
    android:background="@drawable/foodlab_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lakj.comspace.simpletextclient.FoodLab">

    <LinearLayout
        android:id="@+id/FoodLabInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:weightSum="8">


        <TextView
            android:id="@+id/textViewHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Home"
            android:onClick="home"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewONama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/o_nama"
            android:textColor="@color/textview_selector"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textViewKontakt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Kontakt"
            android:textColor="#fff"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textViewPonuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="goToMenu"
            android:text="Ponuda"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvFoodLab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="250dp"

        android:gravity="center"
        android:letterSpacing="0.1"
        android:onClick="goToMenu"
        android:text="Food.Lab"
        android:textColor="@android:color/background_light"
        android:textFontWeight="100"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textPoruka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="225dp"
        android:gravity="center"
        android:text="Mjesto gdje stvaramo recepte i jela za Vas"
        android:textColor="#e58e26"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:src="@drawable/final_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:alpha="1"
        android:orientation="horizontal"
        android:weightSum="11">

        <Button
            android:id="@+id/button1Naslovna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:alpha="0.8"
            android:background="@drawable/round_button"
            android:text="Šta jesti?"
            android:textColor="#fff" />

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button2Naslovna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:background="@drawable/round_button_transparent"
            android:text="Kako naručiti?"
            android:textColor="#fff" />

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button3Naslovna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:alpha="0.8"
            android:background="@drawable/round_button"
            android:text="Lokacija"
            android:textColor="#fff" />

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button4Naslovna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:background="@drawable/round_button_transparent"
            android:text="Rezerviši!"
            android:textColor="#fff" />

    </LinearLayout>


</RelativeLayout>

